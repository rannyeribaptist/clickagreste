%p#notice= notice
%h1 Categories
%table
  %thead
    %tr
      %th Name
      %th Color
      %th Icon
      %th
      %th{:colspan => "3"}
  %tbody
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= category.color
        %td= category.icon
        %td= link_to "Selecionar", companies_path(city_id: params[:city_id], category_id: category.id)
        - if current_user
          %td= link_to 'Show', category
          %td= link_to 'Edit', edit_category_path(category)
          %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Category', new_category_path
