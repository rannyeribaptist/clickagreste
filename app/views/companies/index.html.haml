- content_for :navbar_links do
  %div
    = link_to categories_url(city_id: params[:city_id]) do
      %img{src: "https://icongr.am/clarity/arrow.svg?size=30&color=ffffff", style: "transform: rotate(-90deg)"}
  %div
    = link_to favorites_path(category_id: params[:category_id], city_id: params[:city_id]) do
      %img{src: "https://icongr.am/entypo/heart.svg?size=30&color=ffffff"}
%br
%br

.section
  .section__content.text-center
    -# %p#notice= notice
    .category-card.center
      .category-card__icon{style: "background-color: #{@category.color}"}
        %img{src: "#{@category.icon}"}
    %h3= "Listando " + @category.name + " em " + @city.name

    .fancy-form
      %input{type: "text", placeholder: "Procure por uma palavra chave...", style: "padding-right: 0; width: 96%;"}

    - @companies.order("priority desc").each do |company|
      - if company.company_categories.include? params[:category_id].to_s
        = link_to company do
          .company-card
            = image_tag(company.logo.url)
            .company-card__content
              %strong{style: "margin-bottom: 5px"}= company.name
              %br
              %small= company.description.slice(0, 40) + "..."
            .company-card__favorite
              - if not current_user.favorites.where(:company_id => company.id).any?
                %img{src: "https://icongr.am/entypo/heart-outlined.svg?size=30&color=000000"}
              - else
                %img{src: "https://icongr.am/entypo/heart.svg?size=30&color=e63939"}

      %hr
