.section
  .section__content
    %h2 Editar perfil
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "fancy-form" }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        %label{for: "email"} E-mail
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        %label{for: "password"} Senha
        %i (Deixe em branco se não quiser alterar)
        %br/
        = f.password_field :password, autocomplete: "new-password"
        %small mínimo 6 caractéres
      .field
        %label{for: "password_confirmation"} Confirmar nova senha
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
      .field
        %label{for: "current_password"} Senha atual
        %i (precisamos disso para salvar suas alterações)
        %br/
        = f.password_field :current_password, autocomplete: "current-password"
      .actions
        %br
        %button.button.button--orange{type: "submit"} Salvar

    %br
    %br

    = link_to "Fazer logoff", destroy_user_session_path, method: :delete, style: "color: red"
